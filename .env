# LLM Provider Configuration
# Options: "openai" or "ollama" 
LLM_PROVIDER=ollama
USE_OLLAMA_EMBEDDINGS=True

# OpenAI Configuration (when LLM_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Ollama Configuration (when LLM_PROVIDER=ollama)
LLM_ENDPOINT=http://ollama:11434/v1
OLLAMA_MODEL=llama3.2:1b
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# API Configuration
API_SECRET_KEY=your_secret_key_for_jwt_here
API_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10

# Demo User Credentials (Change in production!)
DEMO_USERNAME=medical_researcher
DEMO_PASSWORD=demo_password_123
