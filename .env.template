# Environment variables for the Medical Document Assistant

# LLM Configuration
# Set USE_OLLAMA=true to use local Ollama instead of OpenAI
USE_OLLAMA=false

# OpenAI Configuration (used when USE_OLLAMA=false)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (used when USE_OLLAMA=true)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Embedding Configuration
# Set USE_OLLAMA_EMBEDDINGS=true to use Ollama for embeddings too
USE_OLLAMA_EMBEDDINGS=false
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# API Security Configuration
API_SECRET_KEY=your-super-secret-jwt-key-change-in-production
API_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=10

# Demo Credentials (change in production)
DEMO_USERNAME=medical_researcher
DEMO_PASSWORD=demo_password_123

# API URL for frontend
API_URL=http://localhost:8000